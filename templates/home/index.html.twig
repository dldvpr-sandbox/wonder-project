{% extends 'base.html.twig' %}

{% block title %}Wonder!{% endblock %}

{% block body %}
    {% for question in questions %}
        <li class="block d-flex flex-row">
            <div></div>
            <div class="flex-fill d-flex flex-column">
                <div>
                    <h3>{{ question.title }}</h3>
                    <p>{{ question.content }}</p>
                </div>
                <div class="d-flex flex-row align-items-between">
                    <div class="d-flex form-row justify-content-center">
                        <img class="mr-10" src="{{ question.author.avatar }}">
                        <p>{{ question.author.name }}</p>
                    </div>
                    <div class="d-flex flex-row justify-content-center">
                        <i class="far fa-comment mr-10"></i>
                        <p>{{ question.nbrOfReponse }}</p>
                    </div>
                </div>
            </div>
        </li>
    {% endfor %}

{% endblock %}
